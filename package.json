{
  "name": "clean-template",
  "private": true,
  "version": "1.0.0",
  "description": "",
  "author": "Thiago Jedi <thiago.cerqueira@agilecontent.com>",
  "license": "UNLICENSED",
  "scripts": {
    "dev": "next",
    "build": "next build",
    "start": "next start",
    "test": "jest"
  },
  "dependencies": {
    "next": "^10.0.0",
    "preact": "^10.0.0",
    "react": "^16.0.0",
    "react-dom": "^16.0.0"
  },
  "devDependencies": {
    "@brandonkal/stylelint-config-rational-order": "^1.0.0",
    "@testing-library/jest-dom": "^5.0.0",
    "@testing-library/react": "^11.0.0",
    "@types/jest": "^26.0.0",
    "@types/node": "^14.0.0",
    "@types/react": "^16.0.0",
    "@types/react-dom": "^16.0.0",
    "@types/testing-library__react": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^4.0.0",
    "@typescript-eslint/parser": "^4.0.0",
    "eslint": "^7.0.0",
    "eslint-config-prettier": "^7.0.0",
    "eslint-plugin-jest": "^24.0.0",
    "eslint-plugin-jest-dom": "^3.0.0",
    "eslint-plugin-react": "^7.0.0",
    "eslint-plugin-react-hooks": "^4.0.0",
    "eslint-plugin-testing-library": "^3.0.0",
    "husky": "^4.3.6",
    "jest": "^26.0.0",
    "lint-staged": "^10.0.0",
    "prettier": "^2.0.0",
    "stylelint": "^13.0.0",
    "stylelint-config-recommended": "^3.0.0",
    "stylelint-order": "^4.0.0",
    "ts-jest": "^26.0.0",
    "typescript": "^4.1.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm run test && npm run build"
    }
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "src/**/*.{css}": [
      "stylelint --fix",
      "prettier --write"
    ],
    "*.{md,json}": "prettier --write"
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "all",
    "proseWrap": "always",
    "overrides": [
      {
        "files": "*.md",
        "options": {
          "printWidth": 100
        }
      }
    ]
  }
}
